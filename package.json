{
  "name": "pet-store",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "db:console": "docker compose run postgres psql -h postgres -U postgres -d pg_db_pet_store_dev",
    "db:migrate": "docker compose run backend npx prisma migrate dev",
    "db:migrate:undo": "echo 'not yet implemented'",
    "rebuild:be": "docker compose build backend && docker compose rm --force --stop backend && docker compose up -d backend",
    "seed:dev": "docker compose run backend node --loader ts-node/esm scripts/seed/dev.ts",
    "start": "node ./dist/src/index.js",
    "start:docker": "npm run build && node --inspect=0.0.0.0 ./dist/src/index.js",
    "prune:docker": "docker system prune --all --force --volumes",
    "watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.2",
    "express": "^5.0.0-beta.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "pg": "^8.12.0",
    "prisma": "^5.17.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "watchy": "^0.10.2"
  }
}
