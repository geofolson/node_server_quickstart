{
  "name": "node-server-quickstart",
  "version": "1.0.0",
  "description": "A quickstart template for Node.js web server with TypeScript, Express, Prisma, and Docker",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "dev": "docker compose up",
    "dev:build": "docker compose up --build",
    "down": "docker compose down",
    "db:console": "docker compose run postgres psql -h postgres -U postgres -d app_db_dev",
    "db:migrate": "docker compose run backend npx prisma migrate dev",
    "db:migrate:undo": "echo 'not yet implemented'",
    "rebuild:be": "docker compose build backend && docker compose rm --force --stop backend && docker compose up -d backend",
    "start": "node ./dist/src/index.js",
    "start:docker": "npm run build && node --inspect=0.0.0.0 ./dist/src/index.js",
    "prune:docker": "docker system prune --all --force --volumes",
    "logs": "docker compose logs -f backend",
    "watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^7.0.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.10.6",
    "express": "^5.0.1",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.9",
    "pg": "^8.13.1",
    "prisma": "^7.0.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "watchy": "^0.12.3"
  }
}
